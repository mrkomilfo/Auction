<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css"-->
    <link href="~/css/LotsListStyles.css" rel="stylesheet" type="text/css">
    <link href="~/css/HeaderStyles.css" rel="stylesheet" type="text/css">
    <link href="~/css/LotDetailStyles.css" rel="stylesheet" type="text/css">
    <link href="~/css/UserInfoStyles.css" rel="stylesheet" type="text/css">
    <link href="~/css/FormStyles.css" rel="stylesheet" type="text/css">
</head>
<body>
    <header>
        <nav>
            <div class="nav-bar">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="nav-ref" href="https://localhost:44391/Lots/ActualLots">
                            <div>Все лоты   </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-ref" href="https://localhost:44391/Lots/EndedLots">
                            <div>Завершенные   </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-ref" href="#">
                            <div>Личный кабинет   </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-ref" href="#">
                            <div>Выставить лот   </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-ref" href="#">
                            <div>Настройки   </div>
                        </a>
                    </li>
                </ul>
            
                <ul class="nav-list">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <div>@User.Identity.Name</div>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="LogOff">
                                <input type="submit" value="Выход" />
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-ref" asp-controller="Account" asp-action="Login">
                                <div>Вход   </div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-ref" asp-controller="Account" asp-action="Register">
                                <div>Регистрация   </div>
                            </a>
                        </li>
                    }
                    </ul>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model RegisterViewModel

<h2 class="form-header">@Localizer["Registration"]</h2>
<form class="form-body" method="post" asp-action="Register" asp-controller="Account">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-input">
        <label asp-for="UserName">@Localizer["UserName"]</label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-input">
        <label asp-for="Email">Email</label><br />
        <input type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-input">
        <label asp-for="PhoneNumber">@Localizer["PhoneNumber"]</label><br />
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-input">
        <label asp-for="Password">@Localizer["Password"]</label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-input">
        <label asp-for="PasswordConfirm">@Localizer["PasswordConfirmation"]</label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div class="form-button">
        <input class="action-link-default lower-button" type="submit" value="@Localizer["SignUp"]" />
    </div>
</form>

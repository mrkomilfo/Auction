@model CreateLotViewModel
@{
    ViewBag.Title = "Создание лота";
}
<form asp-action="Create" asp-controller="Lots" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Год выпуска</label>
        <input type="number" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EngineVolume" class="control-label">Объём двигателя</label>
        <input type="text" asp-for="EngineVolume" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mileage" class="control-label">Пробег</label>
        <input type="number" asp-for="Mileage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Начальная стоимость</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div>
        <label asp-for="Transmission">Коробка</label>
        <select asp-for="Transmission">
            @foreach (var t in transmission)
            {
                <option value=@t>@t</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Fuel">Топливо</label>
        <select asp-for="Fuel">
            @foreach (var f in fuel)
            {
                <option value=@f>@f</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Body">Кузов</label>
        <select asp-for="Body">
            @foreach (var b in body)
            {
                <option value=@b>@b</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Drive">Привод</label>
        <select asp-for="Drive">
            @foreach (var d in drive)
            {
                <option value=@d>@d</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Desc" class="control-label">Описание</label>
        <textarea asp-for="Desc"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Duration" class="control-label">Продолжительность (от 1 до 30 дн)</label>
        <input type="number" asp-for="Duration" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Изображение</label>
        <input type="file" accept=".jpg,.png" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>

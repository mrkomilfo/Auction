@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@model EditRolesViewModel
@inject IViewLocalizer Localizer

<h2 class="form-header">@Localizer["RolesManagement"]</h2>
<form class="form-body" asp-action="Roles" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div>
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <div class="form-button">
        <input class="action-link-default lower-button" type="submit" value=@Localizer["Save"] />
    </div>
